---
import mbizLogo from '../assets/mbiz-logo.png';
---

<div class="flex items-center justify-center w-full h-[calc(100vh-4rem)]">
	<div class="flex flex-col items-center">
		<img
			src={typeof mbizLogo === 'string' ? mbizLogo : mbizLogo.src}
			alt="Loading..."
			width="80"
			height="80"
			class="mb-4 animate-throbbing"
		/>
		<span class="sr-only">Loading...</span>
	</div>
</div>

<style>
	@keyframes throbbing {
		0% {
			transform: scale(1);
			opacity: 1;
		}
		50% {
			transform: scale(1.1);
			opacity: 0.7;
		}
		100% {
			transform: scale(1);
			opacity: 1;
		}
	}

	.animate-throbbing {
		animation: throbbing 1.5s ease-in-out infinite;
	}
</style>
